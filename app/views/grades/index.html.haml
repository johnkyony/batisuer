%h1 Listing grades
.table-responsive

  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th
        %th
        %th


    %tbody
      - @grades.each do |grade|
        %tr
          %td= grade.name
          %td= link_to 'New stream', new_grade_stream_path(grade),class: "btn btn-primary"
          %td= link_to 'View streams', grade_streams_path(grade),class: "btn btn-primary"
          %td= link_to 'Create Fee' ,  new_grade_fee_path(grade) ,class: "btn btn-primary"
          
          %td= link_to 'Edit', edit_grade_path(grade),class: "btn btn-primary"
          %td= link_to 'Destroy', grade, :method => :delete, :data => { :confirm => 'Are you sure?' },class: "btn btn-primary"

%br

